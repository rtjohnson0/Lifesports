{
  "name": "lifesports",
  "version": "0.1.0",
  "private": true,
  "main": "server.js",
  "dependencies": {
    "bcrypt": "^3.0.6",
    "connect-mongo": "^3.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "express-session": "^1.17.0",
    "if-env": "^1.0.4",
    "mongoose": "^5.7.5",
    "morgan": "^1.9.1"
  },
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon server.js --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "cd client && npm run build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rtjohnson0/Lifesports.git"
  },
  "author": "Reggie Johnson, Arely Guevara,Daisha Pettus",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rtjohnson0/Lifesports/issues"
  },
  "homepage": "https://github.com/rtjohnson0/Lifesports#readme",
  "devDependencies": {
    "concurrently": "^5.0.0",
    "nodemon": "^1.19.4"
  }
}
